<div class="pageContainer">
  <main class="pageContent">
    <h1>Регистрация</h1>
    <form id="loginForm" class="form">
      {{> Input name="first_name" type="text" placeholder="Введите имя"}}
      {{> Input name="second_name" type="text" placeholder="Введите фамилию"}}
      {{> Input name="login" type="text" placeholder="Логин"}}
      {{> Input name="email" type="email" placeholder="Почта"}}
      {{> Input name="password" type="password" placeholder="Пароль"}}
      {{> Input name="phone" type="text" placeholder="Номер телефона"}}

      {{> Button id="enter" text="Зарегистрироваться" type="submit"}}
    </form>
    {{> Link data-page="login" href="/login" text="Уже есть аккаунт?"}}
  </main>
  {{> Footer}}
</div>